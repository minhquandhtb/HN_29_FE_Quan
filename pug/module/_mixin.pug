mixin product(title,link,price,original,tag)
    a(href="#",title=title).product
        .wrapper-popup
            img(src=link, alt="img")
            if tag=='new'
                .tag
                    img(src="../img/new-icon.png", alt="img")
            else if tag=='hot'
                .tag
                    img(src="../img/hot-icon.png", alt="img")
            else if tag=='sale'
                .tag
                    img(src="../img/sale-icon.png", alt="img")
            .popup.flex-x-wrap
                .popup__item
                    i.fa.fa-heart
                    span Yêu thích
                .popup__item
                    i.fa.fa-bar-chart
                    span So sánh
                .popup__item
                    i.fa.fa-compress
        h5.title= title
        P.price= price
        sup đ
        p.original= original
        sup đ
        button.btn.btn-black(type="submit") ADD TO CART
