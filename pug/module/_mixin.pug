mixin slide-product(varName,id)
    .slide-product
        input(type="radio", id=id+'-pre', name=id,checked)
        input(type="radio", id=id+'-next', name=id)
        .slide-btn.flex-x
            label(for=id+"-pre")
                i.fa.fa-arrow-left
            label(for=id+"-next")
                i.fa.fa-arrow-right
        .wrapper.flex-x
            each item in varName
                +product(item.name,item.link,item.price,item.original,item.tag)
