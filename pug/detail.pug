block main-content
    main.detail
        section.product-link
            h5 Trang chủ/Sản phẩm/Rượu vang đỏ
        section.product-detail
            .product-detail__wrapper-top
                .product-detail__wrapper-top__thumbnail
                    img(src="../img/product-5.jpg", alt="img")
                    img(src="../img/product-6.jpg", alt="img")
                    img(src="../img/product-7.jpg", alt="img")
                    img(src="../img/product-8.jpg", alt="img")
                    img(src="../img/product-9.jpg", alt="img")
                .product-detail__wrapper-top__large-image
                    img(src="../img/product-detail-main-img.png", alt="img")
                .product-detail__wrapper-top__attribute
                    h1 RƯỢU NHO NĂM 1987
                    img(src="../img/arrow.png", alt="img")
