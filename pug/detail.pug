                                option(value="medium") Loại vừa
                                option(value="small") Loại nhỏ
                    .count
                        h3 SỐ LƯỢNG
                        .wrapper
                            i.fa.fa-plus(aria-hidden='true')
                            form(action="")
                                input(type="number",id="quantity", name="quantity", min="1")
                            i.fa.fa-plus(aria-hidden='true')
                        button.btn.btn-black(type="submit") ADD TO CART
                    .icon
                        i.fa.fa-heart(aria-hidden='true')
                        span Yêu thích   
                        i.fa.fa-bar-chart(aria-hidden='true')
                        span So sánh   
                        i.fa.fa-envelope(aria-hidden='true')
